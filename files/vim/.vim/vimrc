" vim settings {{{
set laststatus=2
set tabstop=4
set shiftwidth=4
set number
set ignorecase
set modeline
set nobackup
set noswapfile
set wrap
set hidden
set hlsearch
if exists('&cc')
	set cc=80,120
endif
set cursorline cursorcolumn
set shortmess+=I " Don't show the intro message
syntax on "Syntax highlighting
" }}}

" Plugins {{{
" Load plugins {{{
if !empty(globpath(&rtp, "autoload/plug.vim"))
	call plug#begin()
	for f in globpath(&rtp, 'pluglists/*.vimplug', 0, 1)
		exe 'source' f
	endfor
	call plug#end()
endif

filetype plugin indent on
syntax on
" }}}

" Plugin settings {{{
let g:table_mode_corner = '|'
let g:vim_markdown_folding_disabled=1
let g:netrw_liststyle=3
