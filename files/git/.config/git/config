[user]
	name = Matt Soucy
	email = msoucy@csh.rit.edu
	signingkey = "B2370F0C"
[alias]
	tree = log --graph --decorate --pretty=short --abbrev-commit
	co = checkout
	ci = commit
	st = status -sb
	br = branch
	serve = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
	ls = log --color --graph --pretty=format:'%C(yellow)%h%Creset -%Cred%d%Creset %s %Cgreen(%cr) %C(blue)[%an]%Creset' --abbrev-commit --all
	ll = log --pretty=format:'%C(yellow)%h%C(red)%d %C(reset)%s%C(blue) [%cn]%C(reset)' --decorate --numstat
	l1 = log --pretty=format:'%C(yellow)%h%C(red)%d %C(reset)%s%C(blue) [%cn]%C(reset)' --decorate --numstat -1
	ld = log --pretty=format:'%C(yellow)%h%Creset %Cgreen%ad%Cred%d %Creset%s%Cblue [%cn]%Creset' --decorate --date=relative
	lg = log --graph --pretty=format:'%C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr) %C(bold blue)<%an>%C(reset)' --abbrev-commit --date=relative
	fl = log -u
	purr = pull --rebase
	ignored = ls-files --others --i --exclude-standard
	wipe = reset --hard HEAD
	standup = "!git log --since yesterday --author `git config user.email` --pretty=short"
	unstage = reset --
	forget = rm --cached
	graph = log --graph --oneline --decorate=short
	root = rev-parse --top-level
	exec = "! "
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
[color]
	ui = true
	[color "branch"]
		current = green
		local = yellow
		remote = red
	[color "diff"]
		meta = yellow bold
		frag = magenta bold
		old = red bold
		new = green bold
	[color "status"]
		added = green
		changed = yellow
		untracked = red
[core]
	filemode = false
	pager = less -r
[push]
	default = simple
[include]
	path = gitlocal
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[tig]
	line-graphics = utf-8
	blame-view = date:default author:full file-name:auto id:yes,color \
                 line-number:yes,interval=5 text
	commit-order = topo
[diff]
	tool = vimdiff
