[user]
	name = Matt Soucy
	email = msoucy@csh.rit.edu
	signingkey = "B2370F0C"
[alias]
	tree = log --graph --decorate --pretty=short --abbrev-commit
	co = checkout
	ci = commit
	st = status -sb
	br = branch
	serve = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
	ls = log --graph --pretty=changelog --all
	lg = log --graph --pretty=changelog
	ll = log --pretty=ll --numstat
	ld = log --pretty=ld --decorate
	purr = pull --rebase
	ignored = ls-files --others --i --exclude-standard
	wipe = reset --hard HEAD
	standup = "!git log --since yesterday --author `git config user.email` --pretty=short"
	unstage = reset --
	forget = rm --cached
	graph = log --graph --oneline --decorate=short
	changelog = log --graph --pretty=changelog-nocolor
	root = rev-parse --show-toplevel
	exec = "!exec "
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	nazi = !echo \"git: 'nazi' is not a git command. See 'git --help'.\n\nDid you mean one of these?\n\talt-right\"
	alt-right = !echo \"git: 'alt-right' is not a git command. See 'git --help'.\n\nDid you mean one of these?\n\tnazi\"
[color]
	ui = true
	[color "branch"]
		current = green
		local = yellow
		remote = red
	[color "diff"]
		meta = yellow bold
		frag = magenta bold
		old = red bold
		new = green bold
	[color "status"]
		added = green
		changed = yellow
		untracked = red
[core]
	filemode = false
	pager = less -r
	askPass =
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[tig]
	line-graphics = utf-8
	blame-view = date:default author:full file-name:auto id:yes,color \
                 line-number:yes,interval=5 text
	commit-order = topo
[diff]
	tool = vimdiff
[pretty]
	changelog = format:"%C(auto)%h%C(reset) -%C(red)%d%C(reset) %s %C(green)(%cr) %C(blue bold)[%an]%C(reset)"
	ll = format:"%C(yellow)%h%C(red)%d%C(reset) %s %C(blue bold)[%cn]%C(reset)"
	ld = format:"%C(auto)%h %C(green)%ar%C(red)%d%C(reset) %s %C(blue bold)[%cn]%C(reset)"
	changelog-nocolor = format:"%h -%d %s (%cr) <%an>"
[include]
	path = gitlocal
